}
//add a new line if the ENTER key is pressed down
let isPressed;
window.addEventListener("keydown", function (e) {
  if (e.key === "Enter") {
    statement.innerHTML += `<br/>`;
    console.log("HI");
    isEnterKeyPressed = true; // need this flag for the else if statement
    playOsc();
  } else if (e.key === "Tab" && isEnterKeyPressed === true) {
    statement.innerHTML += `<span>&nbsp;&nbsp;&nbsp;&nbsp;</span>`;
    console.log("stuff");
    typeWriterSound();
    isEnterKeyPressed = false;
  } else if (e.key === " ") {
    console.log("here");
    statement.innerHTML += `<span class='space'></span>`;
    playBeep();
  } else {
    statement.innerHTML += `<span>${e.key}</span>`;
    console.log("Hello");
    playBeep();
  }
});

