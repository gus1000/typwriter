const statement = document.querySelector(".statement");
let timer;
function playBeep() {
  let snd = new Audio(
    "data:audio/wav;base64,"
  );
  snd.play();
}

function typeWriterSound() {
  let sound = new Audio(
    "https://www.soundjay.com/communication/sounds/typewriter-line-break-1.mp3"
  );
  sound.play();
}

